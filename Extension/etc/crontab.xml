<?xml version="1.0"?>
<!--
/**
 * path:
 * magento2_location/app/code/Vendorname/Extensionname/etc/crontab.xml
 */
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="unific_cron">
        <job name="unific_abandoned_cart" instance="Unific\Extension\Helper\Cart" method="sendCartWebhook">
            <schedule>0 3 * * *</schedule>
        </job>
    </group>
    <group id="unific_message">
        <job name="unific_message_queue" instance="Unific\Extension\Helper\Queue" method="process">
            <schedule>*/5 * * * *</schedule>
        </job>
    </group>
</config>